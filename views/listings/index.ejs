<% layout("/layouts/boilerplate") %>
<body>
  
    <br>
    <!-- <h2>All LISTINGS</h2> <br> -->
    <div class=" form-check form-switch form-check-reverse" >
        <input class="form-check-input" type="checkbox"  id="flexSwitchCheckReverse">
        <label class="form-check-label" for="flexSwitchCheckReverse">Show total after taxes</label>
      </div>
      
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-col-12 ">
    <% for(let listing of allListings){ %>
        
        <div class="card" >
            <a style="text-decoration: none; color: black;" href="/listings/<%= listing._id %>" >
                <img src="<%= listing.image.url %>" class="card-img-top listing-img" alt="default image Of Air BNB" style="height: 20rem;">
                
                <div class="card-body">
                    <p class="card-text non-taxable-value" >
                        <b><%= listing.title %></b><br>
                       &#8377;<%=listing.price.toLocaleString('en-IN')%>/night <i>+18% GST</i>
                    </p> 
                    <p class="card-text taxable-value">
                        <b><%= listing.title %></b><br>
                       &#8377;<%=((1.18)*(listing.price)).toLocaleString('en-IN')%>/night<i>(including taxes)</i>
                    </p>
                </div>
            </a>    
        </div>

    <% } %>
</div>
    
</body>


